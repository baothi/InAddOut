@model IEnumerable<InAddOut.Models.ExpenseType>
@{
    ViewData["Title"] = "Index";
}

<h1>Index - Expense Type</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expense Type Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ExpenseType" asp-action="Create" class="btn btn-primary"> create new Expense Type</a>
        </div>
    </div>
    <br />

  @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expensetype in Model)
                {
                <tr>
                    <td width="50%">@expensetype.Name</td>
                    <td width="50%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="ExpenseType" asp-action="Update" asp-route-Id="@expensetype.Id" class="btn btn-primary mx-1">Update</a>
                            <a asp-controller="ExpenseType" asp-action="Delete" asp-route-Id="@expensetype.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>